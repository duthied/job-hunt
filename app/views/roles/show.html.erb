<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a class="link-body-emphasis fw-semibold text-decoration-none" href="/">Roles</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      Entry
    </li>
  </ol>
</nav>

<div>

  <div class="row">

    <div class="col-sm-3">
      <h3 class="fw-bold mb-0 fs-4"><%= @role.title %></h3>
      <p><small class="badge bg-secondary role-status-<%= @role.status.downcase %>">
        <%= @role.status %>
      </small></p>

      <div class="btn-group" role="group">
        <%= link_to "Edit", edit_role_path(@role), class: "btn btn-secondary btn-sm" %>
        <%= link_to "Delete", @role, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-dark btn-sm" %>
      </div>

      <p>
        <small class="opacity-50 text-nowrap role-updated-at">
          Modified <%= distance_of_time_in_words(@role.updated_at, Time.now)%><br />
          Created <%= distance_of_time_in_words(@role.created_at, Time.now)%>
        </small>
      </p>
    </div>

    <div class="col-sm-9">
      <h3 class="role-sub-header">Notes:</h3>
      
      <p><%= @role.notes %></p>
      
      <div class="action-form">

        <div class="b-example-divider"></div>
        <div class="card-body actions">
          <h6>Log Entries</h6>
            <div>
              <ul class="logentry-list-group">                  
                <%= render @role.logentries %>
              </ul>
            </div>
        </div>

        <h6>Create</h6>
        <%= render 'logentries/form' %>

      </div>
    </div>

  </div>
