<nav aria-label="breadcrumb">
  <ol class="breadcrumb breadcrumb-chevron p-3 bg-body-tertiary rounded-3">
    <li class="breadcrumb-item">
      <a class="link-body-emphasis fw-semibold text-decoration-none" href="/">Roles</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      New!
    </li>
  </ol>
</nav>

<div class="roles-form-container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5">
      <h1 class="display-6">Create a new Role entry</h1>
      
      <%= form_with model: @role do |form| %>
        <div>
          <%= form.label :title %><br>
          <%= form.text_field :title %>
          <% @role.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.label :notes %><br>
          <%= form.text_area :notes %>
          <% @role.errors.full_messages_for(:notes).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.label :status %><br>
          <%= form.text_field :status %>
          <% @role.errors.full_messages_for(:status).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.label :url %><br>
          <%= form.text_field :url %>
          <% @role.errors.full_messages_for(:url).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.submit %>
        </div>
      <% end %>


  </div>
</div>